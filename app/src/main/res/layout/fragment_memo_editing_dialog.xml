<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_memo_color"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:background="@drawable/background_memo_color"
            android:backgroundTint="@color/unselected"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_date"
            app:layout_constraintEnd_toStartOf="@+id/text_view_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_view_date" />

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/view_memo_color"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5월 2일" />

        <EditText
            android:id="@+id/edit_text_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/edit_text_background"
            android:ems="10"
            android:hint="@string/memo_editing_dialog_fragment_002"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:maxHeight="@dimen/max_height_small"
            android:paddingBottom="@dimen/spacing_medium_small"
            android:paddingEnd="@dimen/spacing_extra_large"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium_small"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_date" />

        <ImageView
            android:id="@+id/image_view_detail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_medium_small"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="@+id/edit_text_content"
            app:layout_constraintTop_toTopOf="@+id/edit_text_content"
            app:srcCompat="@drawable/ic_round_notes_24"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/edit_text_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:layout_marginStart="@dimen/spacing_medium"
            android:background="@drawable/rounded_corners_bottom"
            android:backgroundTint="@color/edit_text_background"
            android:ems="10"
            android:hint="@string/memo_editing_dialog_fragment_003"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:maxHeight="@dimen/max_height_medium"
            android:paddingBottom="@dimen/spacing_medium_small"
            android:paddingEnd="@dimen/spacing_medium"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_medium_small"
            android:textSize="@dimen/text_size_medium_small"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_content" />

        <com.flow.android.kotlin.lockscreen.color.widget.ColorPickerLayout
            android:id="@+id/color_picker_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_detail" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/material_button_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="@drawable/rounded_corner_bottom_left"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/memo_editing_dialog_fragment_000"
            app:layout_constraintEnd_toStartOf="@+id/material_button_save"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/color_picker_layout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/material_button_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:background="@drawable/rounded_corner_bottom_right"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/memo_editing_dialog_fragment_001"
            app:layout_constraintBottom_toBottomOf="@+id/material_button_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/material_button_close"
            app:layout_constraintTop_toTopOf="@+id/material_button_close" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>